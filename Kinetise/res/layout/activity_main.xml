<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent" android:layout_height="fill_parent"
             android:id="@+id/rootLayout">
    <com.kinetise.support.layouts.SizeAwareRelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/mainDisplay">
        <FrameLayout android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:id="@+id/mainLayout"
                     android:visibility="invisible"></FrameLayout>
        <View android:id="@+id/touchInterceptView" android:layout_width="match_parent"
              android:layout_height="match_parent"/>
        <com.kinetise.views.InterceptFrameLayout android:layout_width="fill_parent"
                                                 android:layout_height="fill_parent"
                                                 android:id="@+id/overlayInterceptView"
                                                 android:background="#000000"
                                                 android:visibility="gone"
                />
    </com.kinetise.support.layouts.SizeAwareRelativeLayout>
</FrameLayout>
