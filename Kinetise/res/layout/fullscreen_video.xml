<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <VideoView android:id="@+id/fullscreen_video_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
    <ImageButton android:id="@+id/exit_fullscreen_button" android:layout_width="32dp" android:layout_height="32dp"
                 android:layout_alignParentRight="true" android:src="@drawable/ic_fullscreen_exit_white_32dp"
                 android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:visibility="invisible"
                 android:background="@drawable/fullscreen_button_background" />
</RelativeLayout>